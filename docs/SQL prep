SELECT players.name, sheets.name
FROM players
INNER JOIN sheets
ON players.name=sheets.owner
;

SELECT players.name, sheets.name
FROM players
LEFT JOIN sheets
ON players.name=sheets.owner
;

SELECT players.name, sheets.name
FROM players
RIGHT JOIN sheets
ON players.name=sheets.owner
;

SELECT players.id, players.name, sheets.id, sheets.name
FROM players
FULL OUTER JOIN sheets
ON players.id=sheets.id
;

DELETE FROM sheets
WHERE id=2
;

DELETE FROM sheets
WHERE name='Noon' 
;

